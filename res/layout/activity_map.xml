<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

        />

    <RelativeLayout
        android:id="@+id/map_rel_layout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="9">


        <org.osmdroid.views.MapView android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageButton
            android:id="@+id/my_location_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_my_location_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/map_timemachine_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_access_time_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="90dp"
            android:layout_marginEnd="20dp"
            />

        <ImageButton
            android:id="@+id/map_grid_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_grid_on_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="160dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/map_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Total cameras: 1200"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="#000"
            android:background="#888"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>



    <android.support.design.widget.BottomNavigationView

        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="start"
        android:background="#000"
        app:menu="@menu/bottom_navigation_items"/>


</LinearLayout>

