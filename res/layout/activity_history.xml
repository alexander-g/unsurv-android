<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/history_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"

        />

    <LinearLayout
        android:id="@+id/history_detail_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:padding="2dp"
                android:id="@+id/history_detail_image"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                />

            <org.osmdroid.views.MapView
                android:padding="2dp"
                android:id="@+id/history_detail_map"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="200dp">

            </org.osmdroid.views.MapView>





        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/history_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/history_detail_captured_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/captured_info_text"
                />

            <TextView
                android:id="@+id/history_detail_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_toEndOf="@id/history_detail_captured_static_text"
                android:text="@string/select_camera"
                android:textColor="#FFF"
                android:layout_gravity="top"
                />

            <TextView
                android:id="@+id/history_detail_upload_static_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_info_text"
                android:layout_below="@id/history_detail_captured_static_text"/>

            <TextView
                android:id="@+id/history_detail_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/history_detail_timestamp"
                android:layout_alignStart="@id/history_detail_timestamp"
                android:textColor="#FFF"
                />


            </RelativeLayout>




    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/camera_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"

        tools:listitem="@layout/camera_recyclerview_item" />

    <android.support.design.widget.BottomNavigationView

        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:layout_gravity="start"
        android:background="#000"
        app:menu="@menu/bottom_navigation_items"/>


</LinearLayout>


