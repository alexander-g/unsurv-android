<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical">


    <org.unsurv.TutorialViewPager
        android:id="@+id/tutorial_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </org.unsurv.TutorialViewPager>

    <LinearLayout
        android:id="@+id/tutorial_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_margin="3dp"
            android:id="@+id/tutorial_progress_0"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@color/lightGrey"/>

        <View
            android:layout_margin="3dp"
            android:id="@+id/tutorial_progress_1"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@color/lightGrey"/>

        <View
            android:layout_margin="3dp"
            android:id="@+id/tutorial_progress_2"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@color/lightGrey"/>

        <View
            android:layout_margin="3dp"
            android:id="@+id/tutorial_progress_3"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="@color/lightGrey"/>


    </LinearLayout>

</RelativeLayout>

